<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底層陰影效果 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CC000000" /> <!-- 黑色半透明陰影 -->
            <corners android:radius="15dp" />
            <padding
                android:bottom="2dp"
                android:right="2dp" />
        </shape>
    </item>
    <!-- 上層白色背景 -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" /> <!-- 白色背景 -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>